<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1">

    <EditText
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/xgpwd_edit_name"
        android:layout_alignParentTop="true"
        android:hint="请输入您的用户名"
        android:layout_alignLeft="@+id/xgpwd_edit_new"
        android:layout_alignStart="@+id/xgpwd_edit_new"
        android:layout_alignRight="@+id/xgpwd_edit_new"
        android:layout_alignEnd="@+id/xgpwd_edit_new" />

    <!--

        <EditText android:id="@+id/edt_operator_name" style="@style/syncEditText"
            android:hint="@string/hint_operator_name" />
        <ImageView android:id="@+id/syncOperatorImg" style="@style/syncImageView"
            android:layout_alignLeft="@+id/edt_operator_name"
            android:layout_alignTop="@+id/edt_operator_name"
            android:layout_alignBottom="@+id/edt_operator_name" android:src="@drawable/sync_operator" />
    -->

    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/xgpwd_edit_old"
        android:hint="请输入您的旧密码"
        android:layout_below="@+id/xgpwd_edit_name"
        android:layout_alignRight="@+id/xgpwd_edit_name"
        android:layout_alignEnd="@+id/xgpwd_edit_name"
        android:layout_alignLeft="@+id/xgpwd_edit_name"
        android:layout_alignStart="@+id/xgpwd_edit_name" />

    <Button
        android:id="@+id/xgpwd_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xgpwd_sure"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:background="#FF9800"
        android:onClick="not_to_reset"
        android:text="取消"
        android:textSize="20dp" />

    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/xgpwd_edit_new"
        android:layout_below="@+id/xgpwd_edit_old"
        android:layout_centerHorizontal="true"
        android:hint="请确认您的新密码"
        />

    <Button
        android:id="@+id/xgpwd_sure"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xgpwd_edit_new"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="92dp"
        android:background="#3F51B5"
        android:onClick="sure_to_reset"
        android:text="确定"
        android:textSize="20dp" />

    <EditText
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/xgpwd_edit_check"
        android:hint="请输入您的新密码"
        android:layout_below="@+id/xgpwd_edit_new"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
