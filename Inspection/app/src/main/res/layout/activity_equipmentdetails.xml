<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@color/background_color">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="@string/el_10"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_l_28" />

                <TextView
                    android:id="@+id/qiri"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="180dp"
                    android:layout_toRightOf="@+id/textView7"
                    android:gravity="center"
                    android:text="近七日详情"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_l_28"
                    android:background="@drawable/btn_bind_cancel"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/tv_name_title"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/el_id"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <TextView
                    android:id="@+id/textID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/tv_name_title"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_black_light"
                    android:hint="@string/el_id"
                    android:textSize="@dimen/size_ll_30" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line_gray" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/tv_phone_title"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/el_stateName"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/tv_phone_title"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30"
                    android:hint="@string/el_stateName"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line_gray" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/tv_device_title"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/el_3"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <TextView
                    android:id="@+id/textIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/tv_device_title"
                    android:hint="@string/el_3"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_black_light"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/size_ll_30" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line_gray" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/tv__title4"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/el_4"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <TextView
                    android:id="@+id/textSystem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/tv__title4"
                    android:hint="@string/el_null"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_black_light"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/size_ll_30" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/tv__title5"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/el_5"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <TextView
                    android:id="@+id/textScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/tv__title5"
                    android:hint="@string/el_5"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_black_light"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/size_ll_30" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/tv__title6"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/el_6"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <TextView
                    android:id="@+id/textCpu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/tv__title6"
                    android:hint="@string/el_null"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_black_light"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/size_ll_30" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/tv__title7"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/el_7"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <TextView
                    android:id="@+id/textMemory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/tv__title7"
                    android:hint="@string/el_null"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_black_light"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/size_ll_30" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/tv__title8"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/el_8"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <TextView
                    android:id="@+id/textHard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/tv__title8"
                    android:hint="@string/el_null"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_black_light"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/size_ll_30" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line_gray" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/tv__title"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/el_9"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <TextView
                    android:id="@+id/textDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/tv__title"
                    android:hint="@string/el_null"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_black_light"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/size_ll_30" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line_gray" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>