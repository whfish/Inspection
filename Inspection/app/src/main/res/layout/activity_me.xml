<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:orientation="vertical"
    android:splitMotionEvents="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/btn_gradient_orange_16"></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_30px">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_title2" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/shop_category_w">

            <!-- 姓名 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:visibility="visible">


                <TextView
                    android:id="@+id/uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30"
                    tools:text="@string/bt_mine_name" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line_gray"></View>

            <!-- 账号 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">


                <TextView
                    android:id="@+id/uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/horizontal_margin_15px"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30"
                    tools:text="@string/bt_mine_acc" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line_gray"></View>

            <!-- 手机 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">


                <TextView
                    android:id="@+id/uphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/horizontal_margin_15px"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30"
                    tools:text="@string/bt_mine_num" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line_gray"></View>

            <!-- 部门 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/udepart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/horizontal_margin_15px"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30"
                    tools:text="@string/bt_mine_part" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line_gray"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="30dp"
                >


                <Button
                    android:id="@+id/xg_m"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginRight="20.0dip"
                    android:layout_marginBottom="16.0dip"
                    android:background="@drawable/btn_bind_purple"
                    android:text="@string/bt_mine_change_psw"
                    android:textColor="@color/white"
                    android:textSize="17.0sp" />
            </RelativeLayout>

<!--            <RelativeLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:gravity="center_vertical"-->
<!--                android:orientation="horizontal"-->
<!--                android:paddingBottom="15dp">-->


<!--                <Button-->
<!--                    android:id="@+id/btn_choose_photo"-->
<!--                    android:layout_width="fill_parent"-->
<!--                    android:layout_height="45.0dip"-->
<!--                    android:layout_marginBottom="16.0dip"-->
<!--                    android:layout_marginLeft="20.0dip"-->
<!--                    android:layout_marginRight="20.0dip"-->
<!--                    android:background="@drawable/btn_bind_purple"-->
<!--                    android:text="@string/bt_mine_upercenter"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="17.0sp"/>-->
<!--            </RelativeLayout>-->

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>