<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/system_details"
            android:textColor="@color/color_black_light"
            android:textSize="@dimen/size_ll_30" />

    </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name_title"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sys_name"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <TextView
                    android:id="@+id/editTextSysName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/tv_name_title"
                    android:hint="@string/sys_name"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_phone_title"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sys_exp"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <TextView
                    android:id="@+id/editTextDetial1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/tv_phone_title"
                    android:hint="@string/sys_exp"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_device_title"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sys_time"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <TextView
                    android:id="@+id/editTextOptTime1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/tv_device_title"
                    android:hint="@string/sys_time"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_black_light"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/size_ll_30" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv__title4"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sys_manager"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <TextView
                    android:id="@+id/editTextLinkMan1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/tv__title4"
                    android:hint="@string/sys_manager"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_black_light"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/size_ll_30" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv__title5"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sys_managerphone"
                    android:textColor="@color/color_black_light"
                    android:textSize="@dimen/size_ll_30" />

                <TextView
                    android:id="@+id/editTextPhone1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/tv__title4"
                    android:hint="@string/sys_managerphone"
                    android:paddingTop="15dp"
                    android:textColor="@color/color_black_light"
                    android:textColorHint="@color/color_gray"
                    android:textSize="@dimen/size_ll_30" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_line_gray" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:background="@color/background_color"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/sys_list"
            android:textColor="@color/color_black_light"
            android:textSize="@dimen/size_ll_30" />

    </LinearLayout>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:background="@color/background_color"
            android:descendantFocusability="blocksDescendants">


            <ListView
                android:id="@+id/ListView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_color" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>

        </LinearLayout>

    <!--</ScrollView>-->

